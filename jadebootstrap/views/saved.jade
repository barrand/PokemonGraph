extends ../node_modules/jade-bootstrap/layouts/starter
script(src="/Scripts/jquery.timeago.js")

button(onclick='something()') Click
block body
	+navbar-fixed("Pokemon DB","navbar","inverse")
		+nav_item("#") Home
		+nav_item("#", "active") Saved Pokemon
	.container
		.col-md-4
		h1 My Pokemon
		Here is the list of your pokemon: 
		for pokemon in myPokemon
			img(src= pokemon.url width=30 height=30)
			a(href= "/remove/#{pokemon.pokemon_id}") remove 
			b= pokemon.name
			br
		.col-md-8
		h1 Add Your Top 10-15 Battle Ready Pokemon:
		h3 Super Common
		for pokemon in everywherePokemon
			img(src= pokemon.url width=30 height=30)
			if pokemon.owned == 'true'
				a(href= "/remove/#{pokemon.pokemon_id}") remove 
			else
				a(href= "/save/#{pokemon.pokemon_id}") add 
			b= pokemon.name
			br
		h3 Common
		ul
		for pokemon in commonPokemon
			img(src= pokemon.url width=30 height=30)
			if pokemon.owned == 'true'
				a(href= "/remove/#{pokemon.pokemon_id}") remove 
			else
				a(href= "/save/#{pokemon.pokemon_id}") add 
			b= pokemon.name
			br
		h3 Ocassional
		ul
		for pokemon in occasionalPokemon
			img(src= pokemon.url width=30 height=30)
			if pokemon.owned == 'true'
				a(href= "/remove/#{pokemon.pokemon_id}") remove 
			else
				a(href= "/save/#{pokemon.pokemon_id}") add 
			b= pokemon.name
			br
		h3 Rare
		ul
		for pokemon in rarePokemon
			img(src= pokemon.url width=30 height=30)
			if pokemon.owned == 'true'
				a(href= "/remove/#{pokemon.pokemon_id}") remove 
			else
				a(href= "/save/#{pokemon.pokemon_id}") add 
			b= pokemon.name
			br		